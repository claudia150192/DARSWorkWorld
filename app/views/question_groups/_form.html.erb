<p>
  <%= form.label :name %><br />
  <%= form.text_field :name, :class => "textfield" %>
</p>
<p>
  <%= form.label :parent_id %><br />
  <%= form.select :parent_id, QuestionGroup.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select Group'}, :class => "textfield" %>
</p>
<p>
  <%= form.label :order %><br />
  <%= form.select :order, (1..100).collect { |number| number }, {:prompt => 'Select Order'}, :class => "textfield" %>
</p>
<p>
  <%= form.label :next_group_id %><br />
  <%= form.select :next_group_id, QuestionGroup.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select Group', :include_blank => true}, :class => "textfield" %>
</p>
<p>
  <%= form.label :workbook_order %><br />
  <%= form.text_field :workbook_order, :class => "textfield" %>
</p>
