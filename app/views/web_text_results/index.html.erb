<% title "Listing web text results" %>

<table>
  <tr>
    <th>Name</th>
	 <th>Text</th>
    <th>Display rules</th>
    <th>Order</th>
    <th>Comment</th>
	<th>Help Id</th>
    <th>Group</th>
  </tr>

<% @web_text_results.each do |web_text_result| %>
  <tr>
    <td><%=h web_text_result.name %></td>
	<td><%=h web_text_result.text %></td>
    <td><%=h web_text_result.display_rules %></td>
    <td><%=h web_text_result.order %></td>
    <td><%=h web_text_result.comment %></td> 
	<td><%=h web_text_result.help_id %></td> 
    <td><%=h web_text_result.group_id %></td>
    <td><%= link_to 'Edit', edit_web_text_result_path(web_text_result) %></td>
    <td><%= link_to 'Show', web_text_result %></td>
    <td><%= link_to 'Delete', web_text_result, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New web text result', new_web_text_result_path %>