<h1>Listing charts</h1>

<table>
  <tr>
    <th>Chart type</th>
    <th>Title</th>
    <th>Yaxis label</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @charts.each do |chart| %>
  <tr>
    <td><%= chart.chart_type %></td>
    <td><%= chart.title %></td>
    <td><%= chart.yaxis_label %></td>
    <td><%= link_to 'Show', chart %></td>
    <td><%= link_to 'Edit', edit_chart_path(chart) %></td>
    <td><%= link_to 'Delete', chart, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

