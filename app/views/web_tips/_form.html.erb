<p>
  <%= form.label :text %><br />
  <%= form.text_area :text, :class => "textarea calculable" %>
</p>  
<p>   
  <%= form.label :identifier %><br />
  <%= form.text_field :identifier, :class => "textfield" %>
</p>  
<p>   
  <%= form.label :display_rules %><br />
  <%= evaluable_field form, :display_rules %>
</p>  
<p>   
  <%= form.label :group_id %><br />
  <%= form.select :group_id, QuestionGroup.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select Group', :include_blank => true}, :class => "textfield" %>
</p>
<p>
  <%= form.label :group_order %><br />
  <%= form.select :group_order, (1..100).collect { |number| number }, {:prompt => 'Select Order'}, :class => "textfield" %>
</p>
<p>   
  <%= form.label :web_numerical_result_id %><br />
  <%= form.select :web_numerical_result_id, WebNumericalResult.all.collect {|p| [ p.name, p.id ] }, {:prompt => 'Select Web Numerical Result', :include_blank => true}, :class => "textfield" %>
</p>
<p>
  <%= form.label :workbook_order %><br />
  <%= form.text_field :workbook_order, :class => "textfield" %>
</p>
