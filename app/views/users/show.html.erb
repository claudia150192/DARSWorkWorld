<% title h(@user.login) %>
<p>
  <b>Login:</b>
  <%= @user.login %>
</p>

<p>
  <b>Email:</b>
  <%= @user.email %>
</p>

<p>
  <b>Login count:</b>
  <%= @user.login_count %>
</p>

<p>
  <b>Last request at:</b>
  <%= @user.last_request_at %>
</p>

<p>
  <b>Last login at:</b>
  <%= @user.last_login_at %>
</p>

<p>
  <b>Current login at:</b>
  <%= @user.current_login_at %>
</p>

<p>
  <b>Last login ip:</b>
  <%= @user.last_login_ip %>
</p>

<p>
  <b>Current login ip:</b>
  <%= @user.current_login_ip %>
</p>

<% if @user.admin? %>
<p>
  <b>Admin?</b>
  <%= @user.admin? %>
</p>
<% end %>

<p>
<% if can? :update, @user %>
	<%= link_to 'Edit', edit_user_path(@user) %>
<% end %>

<% if can? :manage, @user %>
	| <%= link_to 'Back to Users', users_path %>
<% end %>
</p>
